<odoo>
    <data>
        <!-- ========  List View  =======-->
        <record model="ir.ui.view" id="tourgull_tag_list">
            <field name="name">Tourgull Tag</field>
            <field name="model">tourgull_blog.blog.tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- ========  Form  View  =======-->
        <record model="ir.ui.view" id="tourgull_tag_form">
            <field name="name">Tourgull Tag</field>
            <field name="model">tourgull_blog.blog.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <!-- sidebar -->
                            <group string="">
                                <field name="name"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- ========  Action View  =======-->
        <record model="ir.actions.act_window" id="tourgull_tag_action">
            <field name="name">Tourgull Tag</field>
            <field name="res_model">tourgull_blog.blog.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>